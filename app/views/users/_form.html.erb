<%= form_with model: @user, local: true do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <span>Roles:</span><br>
    <% User.available_role_names.each do |role| %>
      <%= form.check_box("role_#{role}", {checked: @user.has_role?(role)}) %>
      <%= form.label role %><br>
    <% end %>
  </p>

  <p>
    <%= form.label :dob %><br>
    <%= form.date_select(:dob, {start_year: 1900, end_year: Date.today.year, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }}) %>
  </p>

  <p>
    <%= form.label :marital_status %><br>
    <%= form.check_box :marital_status %>
  </p>

  <p>
    <%= form.label :sin %><br>
    <%= form.text_field :sin %>
  </p>

  <p>
    <%= form.label :hire_date %><br>
    <%= form.date_select(:hire_date, {start_year: 1900, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }}) %>
  </p>

  <p>
    <%= form.label :prefs %><br>
    <%= form.text_field :prefs %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>